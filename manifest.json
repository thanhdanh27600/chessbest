{
  "name": "Chessdol",
  "version": "0.1.0",
  "description": "Best move and evaluation bar. Boost your skills on chess dot com",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.chess.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*"
      ],
      "js": [
        "js/firebase.js",
        "js/core.js"
      ],
      "world": "MAIN",
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.chess.com/*"
      ],
      "js": [
        "js/status.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/popup.js"
      ],
      "matches": [
        "https://chess.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Chessdol's status",
    "default_popup": "index.html"
  },
  "manifest_version": 3
}
